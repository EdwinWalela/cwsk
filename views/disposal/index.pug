extend ../layout

block content
  .row 
    .col-md-12 
    .card
      .card-header
        h4.card-title Disposals
        a.text-right.btn.btn-fill.btn-primary(href='/disposal/create')
          i.tim-icons.icon-simple-add
          | New Disposal
      .card-body
          .table-responsive-
          table.table.tablesorter(id='')
            thead.text-primary
              tr
                th
                  | Asset
                th
                  | date
                th.text-center
                  | Actions
            tbody
              each d in disposals
                tr 
                 td
                    if(d.assetId)
                      =d.asset.name
                 td
                    =d.created_at
                 td.text-center
                    a.p-1(href='#' title='View Asset')
                        i.fas.fa-eye
                    a.p-1(href='/disposal/edit/'+d.id title='Edit Disposal')
                        i.fas.fa-edit
                    a.p-1(href='#' title='Delete Asset')
                        i.fas.fa-trash
              
