extend ../layout

block content
  .row 
    .col-md-12 
    .card
      .card-header
        h4.card-title  All Assets
        a.text-right.btn.btn-fill.btn-primary(href='/assets/create')
          i.tim-icons.icon-simple-add
          | Create Asset
      .card-body
          .table-responsive-
          table.table.tablesorter(id='')
            thead.text-primary
              tr
                th
                  | Name
                th
                  | Tag
                th
                  | Valuation
                th.text-center
                  | Insurance
                th.text-center
                  | Actions
            tbody
              each d in assets
                tr 
                  td
                    =d.name
                  td
                    =d.location
                  td
                    =d.address
                  td
                    =d.phone
                  td.text-center
                    a.p-1(href='/asset/'+d.id title='View Asset')
                      i.fas.fa-eye
                    a.p-1(href='/asset/edit/'+d.id title='Edit Asset')
                      i.fas.fa-edit
                    a.p-1(href='#' title='Delete Asset')
                      i.fas.fa-trash
              
